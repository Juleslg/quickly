<style>
  .hotspot {
    position: absolute;
    cursor: pointer;
    transform: translate(calc((var(--hotspot-x) - 50) * 4%), calc((var(--hotspot-y) - 50) * 4%));
  }

  .hotspot-number {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 30px;
    height: 30px;
    border: 1px solid #ffffff;
    color: #ffffff;
    border-radius: 50%;
    font-size: 16px;
    font-weight: bold;
    background-color: rgb(255, 255, 255);
  }

  .hotspot:hover .hotspot-content {
    display: block;
  }

  .hotspot-content {
    display: none;
    position: absolute;
    top: 100%;
    left: 50%;
    transform: translateX(-50%);
    background: #000;
    color: #fff;
    padding: 5px;
    border-radius: 3px;
    white-space: nowrap;
  }
</style>



